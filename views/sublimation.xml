<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View sublimation.sublimation View List -->
    <record id="view_sublimation_sublimation_list" model="ir.ui.view">
        <field name="name">view.sublimation.sublimation.list</field>
        <field name="model">sublimation.sublimation</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="product_tmpl_id" />
            </list>
        </field>
    </record>

    <!-- View sublimation.sublimation form -->
    <record id="view_sublimation_sublimation_form" model="ir.ui.view">
        <field name="name">view.sublimation.sublimation.form</field>
        <field name="model">sublimation.sublimation</field>
        <field name="arch" type="xml">
            <form string="Sublimacion">
                <header>
                    <button string="Ver Producto Sublimado"
                        type="object"
                        name="action_open_product_product"
                        invisible="not product_product_id"
                    />
                </header>
                <sheet>
                    <field
                        name="image"
                        widget="image"
                        class="oe_avatar"
                        options="{'convert_to_webp': True}"
                    />
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_tmpl_id" readonly="context.get('default_product_tmpl_id')" />
                            <field name="price_extra" />
                        </group>
                        <group>
                            <field name="file"></field>
                        </group>
                    
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View sublimation.sublimation search -->
    <record id="view_sublimation_sublimation_search" model="ir.ui.view">
        <field name="name">view.sublimation.sublimation.search</field>
        <field name="model">sublimation.sublimation</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>


</odoo>
