<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View sublimation.design View List -->
    <record id="view_sublimation_design_list" model="ir.ui.view">
        <field name="name">view.sublimation.design.list</field>
        <field name="model">sublimation.design</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="product_tmpl_id" />
            </list>
        </field>
    </record>

    <!-- View sublimation.design form -->
    <record id="view_sublimation_design_form" model="ir.ui.view">
        <field name="name">view.sublimation.design.form</field>
        <field name="model">sublimation.design</field>
        <field name="arch" type="xml">
            <form string="Sublimation Design">
                <header>
                    <button string="Ver Producto Variante"
                        type="object"
                        name="action_open_product_product"
                        invisible="not product_product_id"
                    />
                </header>
                <sheet>
                    <field
                        name="image"
                        widget="image"
                        class="oe_avatar"
                        options="{'convert_to_webp': True}"
                    />
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_tmpl_id" readonly="context.get('product_tmpl_id')" />
                            <field name="price_extra" />
                        </group>
                        <group>
                            <field name="attch"></field>
                        </group>
                    
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View sublimation.design search -->
    <record id="view_sublimation_design_search" model="ir.ui.view">
        <field name="name">view.sublimation.design.search</field>
        <field name="model">sublimation.design</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_sublimation_design_kanban" model="ir.ui.view">
        <field name="name">sublimation.design.view.kanban</field>
        <field name="model">sublimation.design</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">
                            <div class="o_kanban_image_fill_left" t-attf-style="background-image:url('data:image/png;base64,#{record.image.raw_value}')"/>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags"/>
                                <div class="o_kanban_bottom_right">
                                    <span class="badge rounded-pill bg-primary">
                                        <i class="fa fa-shopping-cart"/> Variantes:
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action sublimation.design -->
    <record id="action_sublimation_design" model="ir.actions.act_window">
        <field name="name">Sublimation Design</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sublimation.design</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Sublimation Design.
            </p>
        </field>
    </record>

</odoo>
