<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data >
        <record id="sublimation_wizard_view_form" model="ir.ui.view">
            <field name="name">sublimation.wizard.view.form</field>
            <field name="model">sublimation.wizard</field>
            <field name="arch" type="xml">
                <form string="Sublimation">
                        
                    <sheet>
                        <field
                            name="image_1920"
                            widget="image"
                            class="oe_avatar"
                            options="{'convert_to_webp': True}"
                        />
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Name..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="product_tmpl_sublimation_id" readonly="context.get('default_product_tmpl_sublimation_id')" />
                                <field name="price_extra" />
                            </group>
                            <group>
                                <field name="file"></field>
                            </group>
                        
                        </group>
                    </sheet>
                    <footer>
                        <button string="Create Sublimation" type="object" name="action_create_sublimation" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>    
    </data>
    
</odoo>