<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data >
        <record id="sublimation_attachment_wizard_view_form" model="ir.ui.view">
            <field name="name">sublimation.attachment.wizard.view.form</field>
            <field name="model">sublimation.attachment.wizard</field>
            <field name="arch" type="xml">
                <form string="Sublimation Attachments">
                    <sheet>
                        <group string="Attachments">
                            <field name="attachment_ids" widget="many2many_binary"></field>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Create Sublimation" type="object" name="action_create_attachemnt_sublimation" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>    
    </data>
    
</odoo>